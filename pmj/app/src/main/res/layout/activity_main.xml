<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.palsw.workspace.pmj.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="130"
        android:background="#F5A9F2"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="자기소개"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="80"
        android:background="#F6CEEC"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/profie"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="이름"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:hint="이름을 입력해주세요"
                    android:textSize="15dp"></EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="나이"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:hint="나이를 입력해주세요"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="학교"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="학교를 입력해주세요"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="45dp"
                    android:layout_height="60dp"
                    android:text="지원분야"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:hint="지원분야를 입력해주세요"
                    android:textSize="15dp"/>               </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:background="@drawable/bg">

<!--pink.png파일의 경로가 어디있는지를 못찾아서 그러는 겁니다.-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="클릭!"
            android:layout_gravity="bottom"
            android:layout_marginLeft="300dp"

            />

    </LinearLayout>

</LinearLayout>
